{
    "name": "Pathfinder",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "This extension shows a graph path of your browsing for each tab",
    "homepage_url": "http://sites.google.com/site/rkvsraman",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/bg/background.html",
        "persistent": true
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Pathfinder",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "permissions": [

        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://*/*;http://*/*"
            ],
            "js": [
                "src/inject/inject.js"
            ]
        }
    ]
}