{
    "name": "Historian",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "History on steroids",
    "homepage_url": "http://sites.google.com/site/rkvsraman",
    "omnibox": {
        "keyword": "hi"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/bg/background.html",
        "persistent": true
    },






    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["css/jquery.toolbars.css", "css/bootstrap.icons.css", "bootstrap/css/custom.css"],
            "js": ["js/utils/async.js", "js/utils/diffDOM.js","js/jquery/jquery.js", "js/jquery/jquery.toolbar.js", "bootstrap/js/bootstrap.js"]

    }
  ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Historian",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "permissions": [

        "tabs",
        "unlimitedStorage",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "js/*.js",
        "css/*.css",
        "css/*.png",
        "bootstrap/*",
        "icons/*"

    ]





}